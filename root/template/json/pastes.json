[% NOWRAPPER = 1 %]
[% USE JSON %]
[% FOREACH paste IN json %]
	[% IF paste.user_id == NULL %]
		[% name = "N/A" %]
	[% ELSE %]
		[% name = c.model("Paste::user").find({id => paste.user_id}).username %]
		[% IF name == NULL %]
			[% name = "N/A" %]
		[% END %]
	[% END %]
	[% paste.user_id = name %]
	[% rev = c.model("Paste::revision").search({paste_id => paste.id}) %]
	[% IF rev %]
		[% revnum = 0 %]
		[% FOR i IN rev %]
			[% revnum = revnum + 1 %]
		[% END %]
		[% paste.hasrev = 1 %]
		[% paste.revs = revnum %]
	[% END %]
	[% IF c.model("Paste::revision").find({revision_id => paste.id}) %]
		[% paste.revision = 1 %]
	[% ELSE %]
		[% paste.revision = 0 %]
	[% END %]
[% END %]
[% json.json %]
